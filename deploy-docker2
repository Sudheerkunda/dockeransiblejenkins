---
- hosts: dev
  become: True
  tasks:
    - name: install python
      yum:
        name: python-pip
        state: present

    - name: docker-py
      yum: 
        name: docker-py
        state: present

    - name: start container
      docker_container:
        name: tomcatapp
        image: "sudheerkunda/tomcatapp:$(DOCKER_TAG)"
        state: started
        published_port:
          - 0.0.0.0:8080:8080
